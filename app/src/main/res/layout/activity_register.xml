

<!--The .xml file for the RegisterActivity.java class -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.karen.lop_android.RegisterActivity">



    <!--Creates the textView for labelling "First Name" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="First Name :"
        android:id="@+id/tvFirstName"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <!--Enter FirstName text here -->
    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/etFirstName"
        android:layout_alignTop="@+id/tvFirstName"
        android:layout_marginLeft="150dp"/>

    <!--Creates the textview for labelling Last Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Last Name :"
        android:id="@+id/tvLastName"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--Enter Last Name here -->
    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/etLastName"
        android:layout_alignTop="@+id/tvLastName"
        android:layout_marginLeft="150dp"/>

    <!--Creates the textview for labelling Username -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="UserName :"
        android:id="@+id/tvUserName"
        android:layout_marginTop="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--Enter username here -->
    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/etUserName"
        android:layout_alignTop="@+id/tvUserName"
        android:layout_marginLeft="150dp"/>

    <!--Creates the textview for labelling Password -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password :"
        android:id="@+id/tvPassword"
        android:layout_marginTop="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--Input password here. With input type textPassword -->
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:layout_alignTop="@+id/tvPassword"
        android:layout_marginLeft="150dp"/>

    <!--Creates the textview for labelling Retype Password -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ReType Password :"
        android:id="@+id/tvPassword1"
        android:layout_marginTop="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--Input password again here. With input type textPassword -->
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword1"
        android:layout_alignTop="@+id/tvPassword1"
        android:layout_marginLeft="200dp"/>


    <!--Creates the textview for labelling Email -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email :"
        android:id="@+id/tvEmail"
        android:layout_marginTop="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--Enter email here -->
    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/etEmail"
        android:layout_alignTop="@+id/tvEmail"
        android:layout_marginLeft="150dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btnRegister"
        android:layout_below="@+id/etEmail"
        android:layout_toRightOf="@+id/tvPassword"
        android:layout_toEndOf="@+id/tvPassword"
        android:layout_marginTop="42dp" />


</RelativeLayout>
